<header class="jumbotron">
	<div class="container">
		<h1>Add Date</h1>
	</div>
</header>
<div id="{{layout.path}}" class="container">
	<form class="form-horizontal" method="post">
		<div class="form-group">
			<label class="col-sm-2 control-label">Date (MM-DD-YYYY):</label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="date">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Results:</label>
			<div class="col-sm-10">
				<table class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>Player</th>
							<th>Result</th>
						</tr>
					</thead>
					<tbody>
						{{#each users}}
						<tr>
							<td>{{this}}</td>
							<td class="form-td">
								<input type="number" class="form-control" name="{{this}}">
							</td>
						</tr>
						{{/each}}
					</tbody>
				</table>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Add</button>
			</div>
		</div>
	</form>
</div>
